{
  "version": 2,
  "builds": [{
    "src": "api/app.py",
    "use": "@vercel/python",
    "config": {
      "maxLambdaSize": "50mb",
      "includeFiles": ["**/*.py", "ffmpeg"],
      "installCommand": "pip install -r requirements.txt && apt-get update && apt-get install -y aria2"
    }
  }],
  "routes": [{
    "src": "/(.*)",
    "dest": "api/app.py"
  }]
}
